{{
    var myDecorator = function(decoratee, args) {
        this.decoratee = decoratee;
    }

    myDecorator.prototype.resolve = function(context) {
        return this.decoratee.resolve(context);
    }

    container.set('myDecorator', myDecorator);
}}

@myDecorator("World")
dep(what = "Hello"):
    echo "Welcome!"

@depends(dep)
@triggers(trigger)
say(what, whom = audience):
    echo $(what) $(whom)

trigger:
    echo "Bye!"
